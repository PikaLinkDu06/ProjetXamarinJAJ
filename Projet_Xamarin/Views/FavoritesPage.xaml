<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Projet_Xamarin.Views.FavoritesPage">
    <ContentPage.Content>

        
        <StackLayout Orientation="Vertical">
            
            <StackLayout Margin="0, 50, 0, 0">
                <ActivityIndicator IsVisible="{Binding IsBusy}" IsRunning="{Binding IsBusy}" HorizontalOptions="Center" VerticalOptions="Center" Color="Red"/>
            </StackLayout>

            <ScrollView>
                <StackLayout x:Name="favoriteContent" Orientation="Vertical" Padding="20" Margin="0, 15, 0, 15" HorizontalOptions="CenterAndExpand"></StackLayout>
            </ScrollView>
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>